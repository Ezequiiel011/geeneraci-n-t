    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafío FizzBuzz 2</title>
</head>
<body style="font-family: Arial; text-align: center; background-color: #f0f0f0;">
    <h1>Desafío FizzBuzz 2</h1>

    <p>Completá los campos y generá tu propio FizzBuzz personalizado </p>

    <form id="fizzbuzzForm">
        <label>Palabra 1 (Fizz): </label>
        <input type="text" id="palabra1" value="Fizz"><br><br>

        <label>Palabra 2 (Buzz): </label>
        <input type="text" id="palabra2" value="Buzz"><br><br>

        <label>Hasta qué número: </label>
        <input type="number" id="max" value="20"><br><br>

        <label>Múltiplo para Palabra 1: </label>
        <input type="number" id="fizzNum" value="3"><br><br>

        <label>Múltiplo para Palabra 2: </label>
        <input type="number" id="buzzNum" value="5"><br><br>

        <button type="button" onclick="ejecutarFizzBuzz()">Ejecutar</button>
    </form>

    <h2>Resultado:</h2>
    <p id="resultado" style="white-space: pre-wrap; background-color: white; border: 1px solid #ccc; padding: 10px;"></p>

    <script>
        function fizzBuzz2(palabra1, palabra2, max, fizzNum, buzzNum) {
            let salida = [];
            for (let i = 1; i <= max; i++) {
                let texto = "";
                if (i % fizzNum === 0) texto += palabra1;
                if (i % buzzNum === 0) texto += palabra2;
                salida.push(texto || i);
            }
            return salida.join(", ");
        }

        function ejecutarFizzBuzz() {
            const palabra1 = document.getElementById("palabra1").value || "Fizz";
            const palabra2 = document.getElementById("palabra2").value || "Buzz";
            const max = parseInt(document.getElementById("max").value) || 100;
            const fizzNum = parseInt(document.getElementById("fizzNum").value) || 3;
            const buzzNum = parseInt(document.getElementById("buzzNum").value) || 5;

            const resultado = fizzBuzz2(palabra1, palabra2, max, fizzNum, buzzNum);
            document.getElementById("resultado").textContent = resultado;
        }
    </script>
</body>
</html>
